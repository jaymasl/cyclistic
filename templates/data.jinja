{% extends "base.jinja" %}

{% block content %}
    <h2>Cyclistic Data Visualization from September 2023 to August 2024</h2>
    <div class="chart-container">
        <div class="graph">{{ ride_count | safe }}</div>
        <div class="graph">{{ average_duration | safe }}</div>
        <div class="graph">{{ rideable_type | safe }}</div>
    </div>
    <div class="wide-bar">{{ station_usage | safe }}</div>
    <div class="wide-bar">{{ rides_by_month | safe }}</div>
    <div class="wide-bar">{{ rides_by_day | safe }}</div>
    <div class="wide-bar">{{ rides_by_hour | safe }}</div>
    <div class="wide-bar">{{ ride_duration | safe }}</div>
{% endblock %}
